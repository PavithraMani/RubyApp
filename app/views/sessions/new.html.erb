<h1 class="text-center mt-4">Log In</h1></br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "abc@example.com" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "enter password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "log In", class: "btn mb-2 btn-outline-light" %>
        </div>
      <% end %>
    </div>

  </div>
</div>

